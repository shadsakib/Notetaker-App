<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:theme="@+style/Theme.Customtheme"
    android:background="@color/light"
    tools:context="com.example.shadman.notetaker.MainActivity"
    >

    <EditText
        android:id="@+id/editTitleET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin = "30dp"
        android:hint="Set Title.."
        android:gravity="center"
        android:inputType="textPersonName"
        android:maxLines="1" />

    <EditText
        android:id="@+id/contentET"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_margin = "30dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editTitleET"
        android:paddingBottom="10dp"
        android:gravity="top"
        android:hint="Write here..."
        android:inputType="text|textMultiLine|textCapSentences" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionBT"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:gravity="bottom|end"
        android:elevation="10dp"
        android:layout_below="@id/contentET"
        android:layout_margin="35dp"
        app:backgroundTint="@color/primary_material_dark_1"
        app:srcCompat="@android:drawable/ic_input_add" />


</RelativeLayout>

